generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  gstin     String?  @unique
  role      Role     @default(BROKER)
  customers Customer[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id        String @id @default(cuid())
  name      String
  email     String
  gstin     String
  brokerId  String
  broker    User   @relation(fields: [brokerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  BROKER
}